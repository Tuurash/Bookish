@model IEnumerable<BookExchanger.SellPosting>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Posting</title>
</head>
<body>
    <p>
        @Html.ActionLink("Back to Home", "Index")
    </p>
    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.offeredPoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.offeredPoint)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuyerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellerId)
                </td>
                <td>
                    @if (item.Status == 1)
                    {
                        <label>Accepted</label>
                    }
                    else if (item.Status == 2)
                    {
                        <label>Received By Delivery Man</label>
                    }
                    else if (item.Status == 3)
                    {
                        <label>On the Way</label>
                    }
                    else if (item.Status == 4)
                    {
                        <label>Delivered</label>
                    }
                </td>
            </tr>
        }
    </table>
</body>
</html>
